{
  "name": "book-api",
  "version": "1.0.0",
  "description": "Using graphql for book collection api",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -L --exec babel-node index.js",
    "test": "jest --watchAll",
    "test-coverage": "jest --watchAll --coverage",
    "test-silent": "jest --watchAll --silent",
    "test.user.reset-password": "jest --watchAll -- __test__/apis/user/reset-password.test.js",
    "test.user.reset-password.silent": "jest --watchAll --silent -- __test__/apis/user/reset-password.test.js",
    "test.user.login": "jest --watchAll -- __test__/apis/user/login.test.js",
    "test.user.login.silent": "jest --watchAll --silent -- __test__/apis/user/login.test.js",
    "test.user.logout": "jest --watchAll -- __test__/apis/user/logout.test.js",
    "test.user.logout.silent": "jest --watchAll --silent -- __test__/apis/user/logout.test.js"
  },
  "author": "hoai nam",
  "license": "ISC",
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.26.9",
    "@prisma/client": "^6.1.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "express-session": "^1.18.1",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "graphql-upload": "^16.0.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "prisma": "^6.1.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@babel/node": "^7.23.9",
    "@babel/plugin-proposal-decorators": "^7.24.1",
    "@babel/plugin-syntax-decorators": "^7.24.1",
    "@babel/plugin-transform-class-static-block": "^7.26.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.0"
  },
  "imports": {
    "#utils": "./utils/index.js",
    "#utils/*": "./utils/*.js",
    "#decorators": "./decorators/index.js",
    "#decorators/validators": "./decorators/validators/index.js",
    "#constants": "./constants/index.js",
    "#messages": "./constants/messages.js",
    "#middlewares/*": "./middlewares/*.js",
    "#services/*": "./services/*.js",
    "#services/prisma-client": "./services/prisma-client/index.js",
    "#dto/*": "./dto/*.js",
    "#app": "./index.js",
    "#test/*": "./__test__/*.js"
  },
  "exports": {
    "./modules/*": "./src/modules/*.js",
    "./routes/*.js": "./routes/*.js"
  },
  "jest": {
    "roots": [
      "<rootDir>/__test__"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/prisma/",
      "<rootDir>/db/",
      "<rootDir>/node_modules"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/prisma/",
      "<rootDir>/db/",
      "<rootDir>/node_modules"
    ],
    "coverageDirectory": "__test__/coverage"
  }
}
